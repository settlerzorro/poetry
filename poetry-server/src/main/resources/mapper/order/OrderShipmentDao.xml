<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.poetry.modules.order.dao.OrderShipmentDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.poetry.modules.order.entity.OrderShipmentEntity" id="orderShipmentMap">
        <result property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="contacts" column="contacts"/>
        <result property="mobile" column="mobile"/>
        <result property="address" column="address"/>
        <result property="updateTime" column="update_time"/>
        <result property="provinceName" column="province_name"/>
        <result property="cityName" column="city_name"/>
        <result property="districtName" column="district_name"/>
    </resultMap>

	<select id="queryObject" resultType="com.poetry.modules.order.entity.OrderShipmentEntity">
		select * from order_order_shipment where id = #{value}
	</select>
	
	<select id="queryByOrderId" resultType="com.poetry.modules.order.entity.OrderShipmentEntity">
		select * from order_order_shipment where order_id = #{value}
	</select>

	<select id="queryList" resultType="com.poetry.modules.order.entity.OrderShipmentEntity">
		select * from order_order_shipment
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from order_order_shipment 
	</select>
	 
	<insert id="save" parameterType="com.poetry.modules.order.entity.OrderShipmentEntity">
		insert into order_order_shipment
		(
			`order_id`, 
			`contacts`, 
			`mobile`, 
			`address`, 
			`province_name`, 
			`city_name`, 
			`district_name`, 
			`update_time`
		)
		values
		(
			#{orderId}, 
			#{contacts}, 
			#{mobile}, 
			#{address}, 
			#{provinceName}, 
			#{cityName}, 
			#{districtName}, 
			#{updateTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.poetry.modules.order.entity.OrderShipmentEntity">
		update order_order_shipment 
		<set>
			<if test="orderId != null">`order_id` = #{orderId}, </if>
			<if test="contacts != null">`contacts` = #{contacts}, </if>
			<if test="mobile != null">`mobile` = #{mobile}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from order_order_shipment where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from order_order_shipment where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>