<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.poetry.modules.order.dao.OrderEvaluationDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.poetry.modules.order.entity.OrderEvaluationEntity" id="orderEvaluationMap">
        <result property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="memberId" column="member_id"/>
        <result property="content" column="content"/>
        <result property="star" column="star"/>
        <result property="createTime" column="create_time"/>
        <result property="goodsId" column="goods_id"/>
    </resultMap>

	<select id="queryObject" resultType="com.poetry.modules.order.entity.OrderEvaluationEntity">
		select * from order_order_evaluation where id = #{value}
	</select>

	<select id="queryList" resultType="com.poetry.modules.order.entity.OrderEvaluationEntity">
		select e.*, u.nickname as 'member.nickname', u.avatar_url as 'member.avatarUrl' from order_order_evaluation e left join base_member u on e.member_id = u.id
		
		<where>
			<if test="goodsId != null">
				and e.goods_id = #{goodsId}
			</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from order_order_evaluation e
		<where>
			<if test="goodsId != null">
				and e.goods_id = #{goodsId}
			</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.poetry.modules.order.entity.OrderEvaluationEntity" useGeneratedKeys="true" keyProperty="id">
		insert into order_order_evaluation
		(
			`order_id`, 
			`member_id`, 
			`content`, 
			`star`, 
			`create_time`, 
			`goods_id`
		)
		values
		(
			#{orderId}, 
			#{memberId}, 
			#{content}, 
			#{star}, 
			#{createTime}, 
			#{goodsId}
		)
	</insert>
	 
	<update id="update" parameterType="com.poetry.modules.order.entity.OrderEvaluationEntity">
		update order_order_evaluation 
		<set>
			<if test="orderId != null">`order_id` = #{orderId}, </if>
			<if test="memberId != null">`member_id` = #{memberId}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="star != null">`star` = #{star}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="goodsId != null">`goods_id` = #{goodsId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from order_order_evaluation where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from order_order_evaluation where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>