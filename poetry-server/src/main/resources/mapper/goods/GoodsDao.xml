<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.poetry.modules.goods.dao.GoodsDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.poetry.modules.goods.entity.GoodsEntity" id="goodsMap">
        <result property="id" column="id"/>
        <result property="goodsName" column="goods_name"/>
        <result property="price" column="price"/>
        <result property="picUrl" column="pic_url"/>
        <result property="describe" column="describe"/>
        <result property="createTime" column="create_time"/>
        <result property="status" column="status"/>
        <result property="stock" column="stock"/>
        <association property="category" javaType="com.poetry.modules.goods.entity.CategoryEntity">
        	<result property="categoryName" column="category_name"/>
        </association>
    </resultMap>

	<select id="queryObject" resultType="com.poetry.modules.goods.entity.GoodsEntity">
		select * from order_goods where id = #{value}
	</select>

	<select id="queryList" resultMap="goodsMap">
		select g.*, c.category_name from order_goods g left join order_category c on g.category_id = c.id
		<where>
			<if test="categoryId != null and categoryId != -1">
				c.id = #{categoryId}
			</if>
			<if test="goodsName != null and goodsName != ''">
				and g.goods_name like '%${goodsName}%'
			</if>
			<if test="status != null and status != ''">
				and g.status = #{status}
			</if>
		</where>
		
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from order_goods 
		<where>
			<if test="categoryId != null and categoryId != -1">
				category_id = #{categoryId}
			</if>
			<if test="goodsName != null and goodsName != ''">
				and goods_name like '%${goodsName}%'
			</if>
			<if test="status != null and status != ''">
				and status = #{status}
			</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.poetry.modules.goods.entity.GoodsEntity" useGeneratedKeys="true" keyProperty="id">
		insert into order_goods
		(
			`goods_name`, 
			`category_id`, 
			`price`, 
			`pic_url`, 
			`describe`, 
			`status`, 
			`stock`, 
			`create_time`
		)
		values
		(
			#{goodsName}, 
			#{categoryId}, 
			#{price}, 
			#{picUrl}, 
			#{describe}, 
			#{status}, 
			#{stock}, 
			#{createTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.poetry.modules.goods.entity.GoodsEntity">
		update order_goods 
		<set>
			<if test="goodsName != null">`goods_name` = #{goodsName}, </if>
			<if test="categoryId != null">`category_id` = #{categoryId}, </if>
			<if test="price != null">`price` = #{price}, </if>
			<if test="picUrl != null">`pic_url` = #{picUrl}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="stock != null">`stock` = #{stock}, </if>
			<if test="describe != null">`describe` = #{describe} </if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from order_goods where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from order_goods where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<update id="updateStatus">
		update order_goods set status = #{status} where id in 
		<foreach item="id" collection="ids" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>
	
	<select id="queryByIds" resultType="com.poetry.modules.goods.entity.GoodsEntity">
		select * from order_goods where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</select>
	
	<update id="delStock">
		update order_goods set stock = stock - #{stock} where id = #{id}
	</update>
	
	<update id="addStock">
		update order_goods set stock = stock + #{stock} where id = #{id}
	</update>

</mapper>