<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wfuhui.modules.goods.dao.HistoryDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.wfuhui.modules.goods.entity.HistoryEntity" id="historyMap">
        <result property="id" column="id"/>
        <result property="goodsId" column="goods_id"/>
        <result property="memberId" column="member_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.wfuhui.modules.goods.entity.HistoryEntity">
		select * from order_history where id = #{value}
	</select>
	
	<select id="queryByUserId" resultType="com.wfuhui.modules.goods.entity.HistoryEntity">
		select * from order_history where member_id = #{value}
	</select>
	
	<select id="queryByGoodsId" resultType="com.wfuhui.modules.goods.entity.HistoryEntity">
		select * from order_history where goods_id = #{value}
	</select>

	<select id="queryList" resultType="com.wfuhui.modules.goods.entity.HistoryEntity">
		select * from order_history
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from order_history 
	</select>
	 
	<insert id="save" parameterType="com.wfuhui.modules.goods.entity.HistoryEntity" useGeneratedKeys="true" keyProperty="id">
		insert into order_history
		(
			`goods_id`, 
			`member_id`, 
			`create_time`
		)
		values
		(
			#{goodsId}, 
			#{memberId}, 
			#{createTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.wfuhui.modules.goods.entity.HistoryEntity">
		update order_history 
		<set>
			<if test="goodsId != null">`goods_id` = #{goodsId}, </if>
			<if test="memberId != null">`member_id` = #{memberId}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from order_history where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from order_history where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>